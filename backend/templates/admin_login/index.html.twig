{% extends 'base.html.twig' %}

{% block title %}{{"admin.panel"|trans}}
{% endblock %}

{% block body %}
	<div class="admin-form">
		<h1 class="heading">{{"admin.panel"|trans}}</h1>
		<h2 class="fw-normal heading">{{ 'user.logIn'|trans }}</h2>
		{% if error %}
			<div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<form action="{{ path('app_admin_login') }}" method="post">
			<div class="mb-3">
				<label for="exampleFormControlInput1" class="form-label">{{ 'user.email'|trans }}</label>
				<input type="email" class="form-control" id="username" name="_username">
			</div>
			<div class="mb-3">
				<label for="inputPassword5" class="form-label">{{ 'user.password'|trans }}</label>
				<input type="password" class="form-control" aria-labelledby="passwordHelpBlock" id="password" name="_password">
			</div>
			<button type="submit" class="btn btn-primary">{{ 'user.logIn'|trans }}</button>
		</form>
	</div>
{% endblock %}
